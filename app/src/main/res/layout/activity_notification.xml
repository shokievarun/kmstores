<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationfinal"
    tools:context=".RegisterActivity">


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_arrow21"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back_arrow_foreground"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>



    <EditText
        android:id="@+id/topic21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"

        android:padding="20dp"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Topic"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/title21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic21"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Title"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/body21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title21"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Body"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp"

        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/notifbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body21"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Send Notification"
        android:textColor="@color/white"
        />

</RelativeLayout>