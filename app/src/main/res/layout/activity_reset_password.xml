<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">


    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_arrow_reset"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back_arrow_foreground"/>


        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>


    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:inputType="number"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_below="@+id/relative123"
        android:hint="Please write your phone number..."
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions?"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_below="@+id/find_phone_number"
        android:textSize="18dp"
        android:layout_marginTop="35dp"
        />


    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_below="@+id/title_questions"
        android:hint="Your pet name?"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_1"
        android:hint="Who is your favorite actor?"
        />


    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="5dp"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_2"
        android:text="Verify"
        android:textColor="@android:color/white"

        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/title_fgpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset password without security questions"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:layout_below="@+id/verify_btn"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="8dp"
        android:backgroundTint="@color/blue"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_below="@+id/title_fgpassword"
        android:text="Click  here!"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />

</RelativeLayout>