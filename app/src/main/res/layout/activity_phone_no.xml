<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneNoActivity">



    <RelativeLayout
        android:id="@+id/r111phn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_arrow_phone_no"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back_arrow_foreground"/>

        <TextView
            android:id="@+id/total_price_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/reg_phn_no_btn"
       >

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccpkm"
            android:layout_width="115dp"
            android:layout_height="43dp"
            app:ccpDialog_textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="200dp"
            android:layout_marginRight="3dp"/>

        <EditText
            android:id="@+id/phone_numberedittextkm"
            android:layout_width="200dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:inputType="phone"
            android:layout_marginBottom="200dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number" />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reg_phn_no_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttoncurve"
        android:layout_alignParentBottom="true"
        android:text="Proceed"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/purple_200"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</RelativeLayout>