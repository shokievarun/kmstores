                android:layout_height="50dp"
                android:text="  Books"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:background="@color/grey"

                android:padding="5dp"
                />

            <TextView
                android:id="@+id/txtviewcategory6"
