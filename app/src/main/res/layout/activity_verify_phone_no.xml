<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneNoActivity">



        <RelativeLayout
            android:id="@+id/r111phnverify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple_200"
            android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/back_arrow_phone_no_otp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_back_arrow_foreground"/>

                <TextView
                    android:id="@+id/total_price_phone_no_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textStyle="bold|italic"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    />
        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter OTP"
            android:layout_marginLeft="40dp"
            android:inputType="number"
            android:layout_above="@id/verify_btn"
            android:layout_marginRight="40dp"
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:id="@+id/verificatin_code_entered_by_user"
            android:layout_marginBottom="200dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verify_btn"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttoncurve"
            android:layout_marginTop="30dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="verify"/>


</RelativeLayout>